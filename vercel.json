{
  "version": 2,

  "builds": [
    {
      "src": "packages/backend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/frontend/dist"
      }
    }
  ],

  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/packages/backend/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/frontend/dist/index.html"
    }
  ]
}